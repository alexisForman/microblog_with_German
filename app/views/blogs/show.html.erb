<h1><%= @blog.title %></h1>
<p><%= @blog.content %></p>
<%= image_tag @blog.image_path, style:"border: 1px solid black" %>

<div>
    <% @blog.categories.each do |category| %>
        <b style="margin-right: 6px"><%= category.name %></b>
    <% end %>
</div>

<%= link_to "Edit", edit_blog_path(@blog) %>

<%= button_to "Destroy", @blog, method: :delete %>